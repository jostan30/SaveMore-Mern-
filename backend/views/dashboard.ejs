<%- include('./partials/header') %>
<% if (success.length > 0) { %>
    <div class="absolute top-5 left-1/2 transform -translate-x-1/2 -translate-y-1/2 p-3 rounded-md bg-green-500 transition-all duration-300 shadow-md">
        <span class="inline-block mt-1 mb-1 text-white font-medium">
            <%= success %>
        </span>
    </div>
<% } %>

<div class="w-full flex flex-col items-center px-5 py-10 bg-gray-100">
    <!-- Chat Invitation Section -->
    <div class="w-full max-w-xl text-center p-6 bg-gradient-to-br from-purple-100 to-blue-100 rounded-lg shadow-md mb-10 text-gray-800">
        <p class="text-xl font-medium mb-4">Want to connect with your buyers? We’ve got you covered!</p>
        <a href="/chatSeller" class="relative inline-block px-10 py-3 mt-4 text-lg font-bold bg-blue-500 text-white rounded-full shadow-lg transition-transform transform hover:-translate-y-1 hover:shadow-2xl hover:bg-blue-600 focus:ring-4 focus:ring-blue-300">
            Chat Now
        </a>
    </div>

    <!-- Products Section -->
    <div class="w-full max-w-3xl">
        <% product.forEach(function(prod) { %>
            <div class="w-full bg-white rounded-lg shadow-lg mb-8 overflow-hidden hover:shadow-2xl transition-shadow duration-300 transform hover:scale-105">
                <div class="flex p-5 gap-5">
                    <div class="w-1/3">
                        <img class="w-full h-48 object-cover rounded-md shadow-md" src="data:image/jpeg;base64,<%= prod.image.toString('base64') %>" alt="Product Image">
                    </div>
                    <div class="flex flex-col justify-between w-2/3">
                        <div>
                            <h3 class="text-2xl font-semibold mb-2 text-gray-700"><%= prod.name %></h3>
                            <div class="flex items-center gap-2 mb-3">
                                <button class="p-2 bg-gray-200 rounded-full text-gray-600 hover:bg-gray-300">
                                    <i class="ri-add-line"></i>
                                </button>
                                <div class="px-3 py-1 rounded-md bg-gray-200 text-gray-800 text-lg">01</div>
                                <button class="p-2 bg-gray-200 rounded-full text-gray-600 hover:bg-gray-300">
                                    <i class="ri-subtract-line"></i>
                                </button>
                            </div>
                            <div class="flex justify-between text-lg font-semibold text-gray-600">
                                <span>Net Total</span>
                                <span>₹<%= prod.price %></span>
                            </div>
                        </div>
                        <div class="mt-5">
                            <h3 class="text-lg font-medium text-gray-700">Price Breakdown</h3>
                            <div class="mt-2 text-gray-600">
                                <div class="flex justify-between py-1">
                                    <span>Total MRP</span>
                                    <span>₹<%= prod.price %></span>
                                </div>
                                <div class="flex justify-between py-1">
                                    <span>Discount on MRP</span>
                                    <span>- ₹<%= prod.discount %></span>
                                </div>
                                <div class="flex justify-between py-1">
                                    <span>Platform Fee</span>
                                    <span>₹20</span>
                                </div>
                                <div class="flex justify-between py-1">
                                    <span>Shipping Fee</span>
                                    <span class="text-green-500 font-semibold">FREE</span>
                                </div>
                            </div>
                            <div class="w-full h-px bg-gray-300 my-4"></div>
                            <div class="flex justify-between">
                                <h3 class="text-lg font-medium text-gray-700">Total Amount</h3>
                                <h3 class="font-semibold text-lg text-green-600">₹<%= prod.price %></h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
</div>

<%- include('./partials/footer') %>
