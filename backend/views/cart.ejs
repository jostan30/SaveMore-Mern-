<%- include('./partials/header') %>
<div class="absolute top-5 left-1/2 -translate-x-1/2 -translate-y-1/2 p-3 rounded-md bg-red-500">
    <span class="inline-block mt-1 mb-1 text-white">
        <%=success%>
    </span>
</div>
<div class="w-full flex flex-col items-center px-5 py-10">
    <% user.cart.forEach(function(item){ %>
        <div class="w-full max-w-3xl bg-white rounded-md shadow-lg mb-6 overflow-hidden">
            <div class="flex p-4 gap-4">
                <div class="w-1/3">
                    <img class="w-full h-48 object-cover rounded-md" src="data:image/jpeg;base64,<%= item.image.toString('base64') %>" alt="">
                </div>
                <div class="flex flex-col justify-between w-2/3">
                    <div>
                        <h3 class="text-2xl font-semibold mb-2"><%= item.name %></h3> <!-- Change this to dynamic name -->
                        <div class="flex items-center gap-2 mb-3">
                            <button class="p-1 bg-gray-200 rounded-full">
                                <i class="ri-add-line"></i>
                            </button>
                            <div class="px-2 py-1 rounded-md bg-gray-200 text-black">01</div>
                            <button class="p-1 bg-gray-200 rounded-full">
                                <i class="ri-subtract-line"></i>
                            </button>
                        </div>
                        <div class="flex justify-between text-lg font-medium">
                            <h4>Net Total</h4>
                            <h2>₹<%= item.price%></h2>
                        </div>
                    </div>
                    <div class="mt-5">
                        <h3 class="text-xl">Price Breakdown</h3>
                        <div class="mt-2">
                            <div class="flex justify-between">
                                <h4>Total MRP</h4>
                                <h4>₹<%=item.price%></h4>
                            </div>
                            <div class="flex justify-between">
                                <h4>Discount on MRP</h4>
                                <h4><%= item.discount %></h4>
                            </div>
                            <div class="flex justify-between">
                                <h4>Platform Fee</h4>
                                <h4>₹20</h4>
                            </div>
                            <div class="flex justify-between">
                                <h4>Shipping Fee</h4>
                                <h4>FREE</h4>
                            </div>
                        </div>
                        <div class="w-full h-px bg-gray-300 my-4"></div>
                        <div class="flex justify-between">
                            <h3 class="text-xl">Total Amount</h3>
                            <h3 class="font-semibold text-xl text-green-600">₹<%=item.price%></h3>
                        </div>
                    </div>
                    <div class="mt-4">
                        <a href="/delete/<%=item._id%>" class="text-red-500">Delete</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    <% }) %>
</div>
<%- include('./partials/footer') %>
