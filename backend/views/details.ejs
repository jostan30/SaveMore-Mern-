<%- include('./partials/header') %>

<div class="w-full max-w-4xl mx-auto bg-white rounded-lg shadow-lg mb-8 overflow-hidden mt-10">
    <div class="flex flex-col md:flex-row p-6 gap-6">
        <!-- Image Section -->
        <div class="w-full md:w-1/3">
            <img class="w-full h-64 object-cover rounded-md shadow-md" src="data:image/jpeg;base64,<%= product.image.toString('base64') %>" alt="Product Image">
        </div>
        <!-- Details Section -->
        <div class="flex flex-col justify-between w-full md:w-2/3">
            <div>
                <h3 class="text-3xl font-bold text-gray-800 mb-3"><%= product.name %></h3>
                <div class="flex items-center gap-3 mb-4">
                    <button class="p-2 bg-gray-100 rounded-full hover:bg-gray-200 transition ease-in-out">
                        <i class="ri-add-line text-gray-600"></i>
                    </button>
                    <div class="px-4 py-2 rounded-md bg-gray-100 text-gray-700 text-lg">01</div>
                    <button class="p-2 bg-gray-100 rounded-full hover:bg-gray-200 transition ease-in-out">
                        <i class="ri-subtract-line text-gray-600"></i>
                    </button>
                </div>
                <div class="flex justify-between items-center text-xl font-medium text-gray-700">
                    <h4>Net Total</h4>
                    <h2 class="text-green-600 font-bold">₹<%= product.price %></h2>
                </div>
            </div>
            <!-- Price Breakdown -->
            <div class="mt-6">
                <h3 class="text-2xl font-semibold text-gray-800 mb-4">Price Breakdown</h3>
                <div class="space-y-3">
                    <div class="flex justify-between text-lg">
                        <h4 class="text-gray-600">Total MRP</h4>
                        <h4 class="font-semibold">₹<%= product.price %></h4>
                    </div>
                    <div class="flex justify-between text-lg">
                        <h4 class="text-gray-600">Discount on MRP</h4>
                        <h4 class="font-semibold text-red-600">- ₹<%= product.discount %></h4>
                    </div>
                    <div class="flex justify-between text-lg">
                        <h4 class="text-gray-600">Shipping Fee</h4>
                        <h4 class="font-semibold text-green-600">FREE</h4>
                    </div>
                    <div class="flex justify-between text-lg">
                        <h4 class="text-gray-600">Shop Name</h4>
                        <h4 class="font-semibold"><%= product.ShopName %></h4>
                    </div>
                    <div class="flex justify-between text-lg">
                        <h4 class="text-gray-600">Shop Address</h4>
                        <h4 class="font-semibold"><%= product.Address %></h4>
                    </div>
                </div>
                <div class="bg-gray-100 mt-6 p-4 rounded-md shadow-sm">
                    <h3 class="text-xl font-semibold text-gray-800 mb-2">Product Description</h3>
                    <p class="text-gray-700 leading-relaxed">
                        <%= product.description %>
                    </p>
                </div>
                <div>
                    <a href="/chatBuyer/<%=product._id%>" class="text-blue-500">Chat Now</a>
                </div>
                <div class="w-full h-px bg-gray-300 my-5"></div>
                <div class="flex justify-between items-center text-xl">
                    <h3 class="text-gray-800 font-semibold">Total Amount</h3>
                    <h3 class="text-green-600 font-bold">₹<%= product.price %></h3>
                </div>
            </div>

            <!-- Description Box -->
           
        </div>
    </div>
</div>

<%- include('./partials/footer') %>
