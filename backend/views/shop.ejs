<%- include('./partials/header') %>

<!-- Success Message -->
<% if (success.length > 0) { %>
    <div class="absolute top-5 left-1/2 transform -translate-x-1/2 p-4 rounded-md bg-green-500 shadow-lg animate-fade-in-down">
        <span class="inline-block text-white text-sm font-semibold tracking-wide">
            <%= success %>
        </span>
    </div>
<% } %>

<!-- Main Content Area -->
<div class="container mx-auto flex flex-col lg:flex-row p-10 space-y-10 lg:space-y-0 lg:space-x-10">
    
    <!-- Sidebar -->
    <aside class="w-full lg:w-1/4 flex flex-col space-y-8 border-r border-gray-200 pr-6">
        <h3 class="text-2xl font-semibold text-gray-800 mb-2">Filter & Sort</h3>
        
        <div>
            <h4 class="text-lg font-semibold mb-3">Sort By</h4>
            <form action="/shop">
                <select class="border border-gray-300 rounded-md px-4 py-2 w-full focus:outline-none focus:ring-2 focus:ring-blue-500 transition-shadow">
                    <option value="popular">Popular</option>
                    <option value="newest">Newest</option>
                </select>
            </form>
        </div>
        
        <div>
            <h4 class="text-lg font-semibold mb-3">Categories</h4>
            <nav class="flex flex-col space-y-2">
                <a class="hover:text-blue-600 transition-colors text-gray-600" href="">New Collection</a>
                <a class="hover:text-blue-600 transition-colors text-gray-600" href="">All Products</a>
                <a class="hover:text-blue-600 transition-colors text-gray-600" href="">Discounted Products</a>
            </nav>
        </div>
        
        <div>
            <h4 class="text-lg font-semibold mt-6 mb-3">Filter By</h4>
            <nav class="flex flex-col space-y-2">
                <a class="hover:text-blue-600 transition-colors text-gray-600" href="">Availability</a>
                <a class="hover:text-blue-600 transition-colors text-gray-600" href="">Discount</a>
            </nav>
        </div>
    </aside>

    <!-- Product Grid -->
    <main class="w-full lg:w-3/4">
        <h2 class="text-3xl font-bold text-gray-800 mb-6">Explore Our Collection</h2>
        
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-10">
            <% products.forEach(function(product) { %>
                <div class="bg-white rounded-lg shadow-md overflow-hidden transform hover:scale-105 transition-transform duration-300 group">
                    
                    <!-- Product Image -->
                    <div class="h-64 overflow-hidden bg-gray-100">
                        <img class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-300" src="data:image/jpeg;base64,<%= product.image.toString('base64') %>" alt="<%= product.name %>">
                    </div>
                    
                    <!-- Product Details -->
                    <div class="flex flex-col justify-between p-5 bg-[<%= product.panelcolor %>] text-[<%= product.textcolor %>]">
                        <div>
                            <h3 class="text-xl font-semibold"><%= product.name %></h3>
                            <p class="text-md font-medium text-gray-700 mt-1">â‚¹<%= product.price %></p>
                        </div>
                        
                        <!-- More Details and Add to Cart -->
                        <div class="flex items-center justify-between mt-4">
                            <a href="/details/<%= product._id %>" class="text-blue-500 hover:text-blue-700 transition-colors underline text-sm">More Details</a>
                            <a href="/addtocart/<%= product._id %>" class="bg-blue-500 text-white p-2 rounded-full shadow-lg hover:bg-blue-600 transition-all duration-200">
                                <i class="fa-solid fa-cart-plus"></i>
                            </a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </main>
</div>

<%- include('./partials/footer') %>
