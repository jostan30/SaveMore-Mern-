<%- include('./partials/header') %>

<% if (success.length > 0) { %>
    <div class="absolute top-5 left-1/2 -translate-x-1/2 -translate-y-1/2 p-3 rounded-md bg-green-500 transition-all duration-300">
        <span class="inline-block mt-1 mb-1 text-white">
            <%= success %>
        </span>
    </div>
<% } %>

<div class="min-h-screen flex flex-col bg-gray-100">
    <div class="container mx-auto px-10 py-20 flex flex-grow">
        <div class="w-[25%] flex flex-col items-start bg-white shadow rounded-lg p-5">
            <h3 class="text-lg font-semibold mb-4">Navigation</h3>
            <a class="block mb-2 text-blue-600 hover:underline" href="/shop">All Products</a>
            <a class="block mb-2 text-blue-600 hover:underline" href="/owners/admin">Create New Product</a>
            <a class="block mb-2 text-blue-600 hover:underline" href="/owners/dashboard">My Dashboard</a>
        </div>
        <main class="w-3/4 bg-white p-8 shadow rounded-lg ml-4">
            <h2 class="text-2xl font-bold mb-6">Create New Product</h2>
            <form autocomplete="off" action="/products/create" method="post" enctype="multipart/form-data">
                <div class="mb-6">
                    <h3 class="text-lg font-semibold mb-4">Product Details</h3>
                    <div class="mb-4">
                        <label class="block mb-2 font-medium">Product Image</label>
                        <input name="image" type="file" class="py-2 px-4 rounded border border-gray-300 hover:border-blue-500 transition duration-200" required>
                    </div>
                    <div class="grid grid-cols-2 gap-4">
                        <input name="name" type="text" placeholder="Product Name" class="border p-2 rounded w-full focus:outline-none focus:ring focus:ring-blue-300" required>
                        <input name="price" type="number" placeholder="Product Price" class="border p-2 rounded w-full focus:outline-none focus:ring focus:ring-blue-300" required>
                        <input name="discount" type="number" placeholder="Discount Price" class="border p-2 rounded w-full focus:outline-none focus:ring focus:ring-blue-300">
                    </div>
                </div>

                <div class="mb-6">
                    <h3 class="text-lg font-semibold mb-4">Panel Details</h3>
                    <div class="grid grid-cols-2 gap-4">
                        <input name="ShopName" type="text" placeholder="Enter your Shop Name" class="border p-2 rounded w-full focus:outline-none focus:ring focus:ring-blue-300">
                        <input name="Address" type="text" placeholder="Enter your Address" class="border p-2 rounded w-full focus:outline-none focus:ring focus:ring-blue-300">
                        <!-- <input name="Description" type="text" placeholder="Text Color" class="border p-2 rounded w-full focus:outline-none focus:ring focus:ring-blue-300"> -->
                        <label for="description">Enter your product description:</label><br>
                        <textarea id="paragraph" name="description" rows="4" cols="50"  class="border p-2 rounded w-full focus:outline-none focus:ring focus:ring-blue-300"> </textarea>
                    </div>
                </div>
                <input class="px-5 py-2 rounded mt-3 bg-blue-600 text-white hover:bg-blue-700 transition duration-200 cursor-pointer" type="submit" value="Create New Product">
            </form>
        </main>
    </div>
</div>

<%- include('./partials/footer') %>
